{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist",        // A pasta onde os arquivos compilados serão gerados
    "baseUrl": "./src",        // A pasta base de onde os imports são relativos
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts"              // Incluir todos os arquivos TypeScript na pasta src
  ],
  "exclude": [
    "node_modules"
  ]
}
